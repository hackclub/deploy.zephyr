[Unit]
Description=ZephyrNET - {{site}}
After=network.target
ConditionPathIsDirectory=/opt/zephyr/repos/{{site}}
ConditionFileIsExecutable=/opt/zephyr/repos/{{site}}/entrypoint.sh

[Service]
#User=orpheus
User=git
WorkingDirectory=/opt/zephyr/repos/{{site}}
Environment=PORT={{port}}
ExecStart=/opt/zephyr/repos/{{site}}/entrypoint.sh
Restart=on-failure
RestartSec=10
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
Type=simple

[Install]
WantedBy=multi-user.target
